{
  "name": "nuxt_various",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "nuxt",
    "dev:clean": "rm -rf .nuxt && yarn install && yarn dev",
    "build": "nuxt build",
    "start": "nuxt start",
    "generate": "nuxt generate",
    "lint:js": "eslint --ext \".js,.ts,.vue\" --ignore-path .gitignore .",
    "lint:style": "stylelint \"**/*.{css,scss,sass,html,vue}\" --ignore-path .gitignore",
    "lint:prettier": "prettier --check .",
    "lint": "yarn lint:js && yarn lint:style && yarn lint:prettier",
    "lintfix": "prettier --write --list-different . && yarn lint:js --fix && yarn lint:style --fix",
    "prepare": "husky install",
    "test": "echo server側のテストのためにjson-serverを起動してください、またdbのデータが残るためテスト後にjson-serverは終了してください。 && jest",
    "test:components": "jest --testPathPattern=components/",
    "test:server": "jest --testPathPattern=server/",
    "test:no-cache": "echo server側のテストのためにjson-serverを起動してください && jest --clearCache",
    "clean": "rm -rf node_modules yarn.lock && yarn install",
    "start:json-server": "node server/index.js"
  },
  "lint-staged": {
    "*.{js,ts,vue}": "eslint --cache",
    "*.{css,scss,sass,html,vue}": "stylelint",
    "*.**": [
      "prettier --check --ignore-unknown"
    ]
  },
  "dependencies": {
    "@nuxtjs/axios": "^5.13.6",
    "@nuxtjs/composition-api": "^0.33.1",
    "core-js": "^3.25.3",
    "json-server": "0.17.4",
    "nuxt": "^2.15.8",
    "vue": "^2.7.10",
    "vue-server-renderer": "^2.7.10",
    "vue-template-compiler": "^2.7.10",
    "vuetify": "^2.6.10",
    "vuex-persistedstate": "^4.1.0"
  },
  "devDependencies": {
    "@babel/core": "^7.24.3",
    "@babel/eslint-parser": "^7.19.1",
    "@babel/preset-env": "^7.24.3",
    "@commitlint/cli": "^17.1.2",
    "@commitlint/config-conventional": "^17.1.0",
    "@nuxt/types": "^2.15.8",
    "@nuxt/typescript-build": "^2.1.0",
    "@nuxtjs/eslint-config-typescript": "^11.0.0",
    "@nuxtjs/eslint-module": "^3.1.0",
    "@nuxtjs/stylelint-module": "^4.1.0",
    "@nuxtjs/vuetify": "^1.12.3",
    "@types/jest": "^29.5.12",
    "@types/mocha": "^10.0.6",
    "@vue/compiler-dom": "^3.4.21",
    "@vue/server-renderer": "^3.4.21",
    "@vue/test-utils": "1",
    "axios-mock-adapter": "^1.22.0",
    "babel-core": "7.0.0-bridge.0",
    "babel-jest": "^29.7.0",
    "eslint": "^8.24.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-jest": "^27.0.4",
    "eslint-plugin-nuxt": "^4.0.0",
    "eslint-plugin-vue": "^9.5.1",
    "flush-promises": "^1.0.2",
    "husky": "^8.0.1",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.1.2",
    "lint-staged": "^13.0.3",
    "postcss-html": "^1.6.0",
    "prettier": "^2.7.1",
    "stylelint": "^16.2.1",
    "stylelint-config-recommended-vue": "^1.5.0",
    "stylelint-config-standard": "^36.0.0",
    "ts-jest": "^29.0.3",
    "vue-jest": "^3.0.7"
  }
}
